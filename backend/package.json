{
  "name": "user-register-api",
  "version": "1.0.0",
  "description": "API simples com rota para criação de contas de usuários",
  "main": "dist/index.js",
  "scripts": {
    "dev": "sucrase-node src/index.js",
    "build": "sucrase ./src -d ./dist --transforms imports",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "knex:migrate:make": "npx knex --knexfile src/main/config/knexfile.js migrate:make"
  },
  "keywords": [
    "User",
    "API",
    "contas"
  ],
  "author": "Luis Carlos Galvão",
  "license": "ISC",
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.1.0",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "sucrase": "^3.18.1"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "knex": "^0.95.5",
    "nodemailer": "^6.6.0",
    "pg": "^8.6.0",
    "yup": "^0.32.9"
  },
  "lint-staged": {
    "*.js": "eslint 'src/**' --fix"
  }
}
